<div id="district-weathers" class="content-right">
  <div class="title">
    实况数据
  </div>
  <div class="sub-title">
    <div>实况</div>
    <div>温度</div>
    <div>风速</div>
    <div>湿度</div>
    <div>小时雨量</div>
    <div>气压</div>
    <div>能见度</div>
  </div>
  <div class="weathers-content">
    <% @district_weathers.each do |item| %>
      <div class="line-content">
        <div class="text-center"><%= item['site_name'] %></div>
        <div class="text-center"><%= item['tempe']%></div>
        <div class="text-center"><%= item['wind_speed']%></div>
        <div class="text-center"><%= item['humi']%></div>
        <div class="text-center"><%= item['rain']%></div>
        <div class="text-right"><%= item['air_pressure']%></div>
        <div class="text-right"><%= item['visibility']%></div>
      </div>
      <div class="line"></div>
    <% end %>
  </div>
</div>
