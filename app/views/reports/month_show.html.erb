<% content_for :title do %>
	接口调用信息
<% end %>
<div class="warp">
	<div class="sef-container clearfix">
		<div class="tab-title col-xs-12">
			<!-- 前一月 -->
			<%= link_to month_show_reports_path(date: last_month(@begin_month), name: params[:name]) do %>
				<div class="col-xs-4">
					<span class="glyphicon glyphicon-chevron-left icon icon-left" aria-hidden="true"></span> <span>前一月</span>
				</div>
			<% end %>
			<!-- 选择日期 -->
			<div class="col-xs-4 text-center">
				<input type="text" value="<%= @begin_month.strftime("%Y-%m") %>" readonly id="selected_month_input" class="select_date">
			</div>
			<!-- 后一月 -->
			<% if next_month(@end_month) > Date.today %>
				<div class="col-xs-4 text-muted">
					<span class="pull-right"><span>后一月</span> <span class="glyphicon glyphicon-chevron-right icon icon-right" aria-hidden="true"></span></span>
				</div>
			<% else %>
				<%= link_to month_show_reports_path(date: next_month(@end_month), name: params[:name]) do %>
					<div class="col-xs-4">
						<span class="pull-right"><span>后一月</span> <span class="glyphicon glyphicon-chevron-right icon icon-right" aria-hidden="true"></span></span>
					</div>
				<% end %>
			<% end %>
		</div>
		<div class="col-xs-12 mes-line text-center state">
			<div class="col-xs-6">调用总次数</div>
			<div class="col-xs-6">调用次数最多的客户</div>
			<div class="col-xs-6"><%= @total_count %></div>
			<div class="col-xs-6"><%= @api_user_infos.keys.first unless @total_count == 0 %></div>
		</div>
		<div class="tab-line clearfix">
			<% if @total_count == 0 %>
				<div class="col-xs-12 mes-line"><h4 class="text-center">无纪录</h4></div>
			<% else %>
				<% index = 0 %>
				<% @api_user_infos.each do |key, value| %>
					<div class="col-xs-12 mes-line">
						<div class="first-line">
							<div class="col-xs-7 line large-title"><%= index += 1 %>、
								<% if value[:allow] == 1 %>
									<%= key %>
								<% else %>
									<span style="color: red;"><%= key %></span>
								<% end %>
							</div>
							<div class="col-xs-5 line p-l-0 small-tab">
								<i class="fa fa-circle fa-red"></i>调用次数最高的时间点
							</div>
						</div>
						<div class="col-xs-7 line max-point">
							<span class="small-tab"><i class="fa fa-circle fa-green"></i>调用次数</span>
							<span class="number"><%= value[:sum_count] %></span>&nbsp;&nbsp;
							<span class="small-tab">百分比</span>
							<span class="number"><%= (value[:sum_count].to_f * 1000 / @total_count).to_i / 10.0 %>％</span>
						</div>
						<div class="col-xs-5 line number">&nbsp;
							<% value[:tops].each do |top| %>
								<span><%= "#{top.to_date.strftime("%d")}号"%></span>
							<% end %>
						</div>
					</div>
					<hr class="line-hr">
				<% end %>
			<% end %>
		</div>
		<div class="tab-title col-xs-12">
			<%= params[:name] %> 调用次数时间分布
		</div>
			<div class="col-xs-12 tab-line right1">
				<div style="height:220px" class="air-fw2"></div>
			</div>
	</div>
</div>

<script>
	$(function(){
		//中间日期选择
		(function($){
			$.fn.datetimepicker.dates['zh-CN'] = {
				days: ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六", "星期日"],
				daysShort: ["周日", "周一", "周二", "周三", "周四", "周五", "周六", "周日"],
				daysMin:  ["日", "一", "二", "三", "四", "五", "六", "日"],
				months: ["一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月", "十二月"],
				monthsShort: ["一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一", "十二"],
				today: "最新",
				suffix: [],
				meridiem: ["上午", "下午"]
			};
		}(jQuery));

		$("#selected_month_input").datetimepicker({
			format: "yyyy-mm",
			minView: 3,
			startView: 3,
			endDate: '<%= Time.now.to_date.strftime("%F") %>',
			todayBtn: true,
			pickerPosition: 'bottom-right',
			autoclose: true,
			language: 'zh-CN'
		}).on('changeDate', function(ev){
				location.href = "<% month_show_reports_path %>?name=<%= params[:name] %>&&date=" + ev.date.valueOf();
			});
	});
</script>

<script type="text/javascript">
	var right1 = $(".right1").height();
	// 路径配置
	require.config({
		paths: {
			echarts: '/assets/echarts'
		}
	});

	// 使用
	require(
		[
		'echarts',
		'echarts/chart/line' // 使用柱状图就加载bar模块，按需加载
		],
		function (ec) {
			$(".air-fw2").each(function(){
				var myChart = ec.init($(this).get(0));
				var option = {
					tooltip : {
						trigger: 'axis',
					},
					calculable : true,
					grid : {
						x: 45,
						x2: 5,
						y: 30,
						y2: 30
					},
					xAxis : [
						{
							type : 'category',
							boundaryGap : false,
							data : [
								<% (@begin_month..@end_month).each do |date| %>
									<%= date.strftime("%d") %>,
								<% end %>
							]
						}
					],
					yAxis : [
						{
							type : 'value',
							name : '次数',
						}
					],
				    series : [
			        {
		            name:'调用次数',
		            type:'line',
		            stack: '总量',
		            symbol: 'none',
		            itemStyle: {
	                normal: {
                    areaStyle: {
                        // 区域图，纵向渐变填充
                        color : (function (){
                            var zrColor = require('zrender/tool/color');
                            return zrColor.getLinearGradient(
                                0, 200, 0, 400,
                                [[0, 'rgba(255,0,0,0.8)'],[0.5, 'rgba(64, 220, 87, 1)']]
                            )
                        })()
                    }
	                }
		            },
		            <% every_count = chart_count(@interface_info, "month") %>
		            data:[
		               <% (@begin_month..@end_month).each do |month_day| %>
		               	<%= every_count[month_day.strftime("%d")] || 0 %>,
		               <% end %>
		            ],
		            splitNumber : {
		            	data : [
		                    {max : '100', min: '0'}
		                ]
		            }
			        },
				    ]
					};
			// 为echarts对象加载数据
			myChart.setOption(option);
			});
		}
	);
</script>
