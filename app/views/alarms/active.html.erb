<% content_for :title do %>
	活跃告警记录
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="tab-title clearfix text-center">
			<div class="col-xs-4">标题</div>
			<div class="col-xs-3">模块</div>
			<div class="col-xs-5">告警时间</div>
		</div>
		<div class="tab-line text-center clearfix">
			<% if @alarms.present? %>
				<% @alarms.each do |alarm| %>
					<%= link_to alarm_path(alarm) do %>
						<div class="col-xs-12 active-line">
							<div class="col-xs-4"><%= alarm.title %></div>
							<div class="col-xs-4"><%= alarm.category %></div>
							<div class="col-xs-4"><%= alarm.user.name %></div>
							<div class="col-xs-12">
								<div class="col-xs-6 small-tab text-left" style="padding-left: 15px;">
									<i class="fa fa-circle fa-red"></i>
									开始:<%= alarm.alarmed_at.strftime("%y-%m-%d %H:%M") %>
								</div>
								<div class="col-xs-6 small-tab text-left">
									<i class="fa fa-circle fa-green"></i>
									结束:<%= alarm.end_time.strftime("%y-%m-%d %H:%M") %>
								</div>
							</div>
						</div>
						<hr class="line-hr">
					<% end %>
				<% end %>
		  <% else %>
		    <div class="col-xs-12">
					<h4>无活跃告警</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>
