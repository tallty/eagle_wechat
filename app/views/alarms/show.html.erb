<% content_for :title do %>
	告警详细信息
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="alarm-group tab-line clearfix">
      <div class="group-line">
        <div class="col-xs-12 alarm-title">
          <%= @alarm.title %>
        </div>
      </div>
      <hr class="line-hr-2">
      <div class="group-line">
        <div class="col-xs-3">
          所属模块:
        </div>
        <div class="col-xs-9">
          <%= @alarm.category %>
        </div>
      </div>
      <div class="group-line">
        <div class="col-xs-3">
          告警时间:
        </div>
        <div class="col-xs-9">
          <%= @alarm.alarmed_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
      </div>
      <div class="group-line">
        <div class="col-xs-3">
          解除时间:
        </div>
        <div class="col-xs-9">
          <%= @alarm.end_time.strftime("%Y-%m-%d %H:%M") %>
        </div>
      </div>
      <div class="group-line">
        <div class="col-xs-3">
          处理信息:
        </div>
        <div class="col-xs-9">
          <%= @alarm.info %>
        </div>
      </div>
      <div class="group-line">
        <div class="col-xs-3">
          处理者:
        </div>
        <div class="col-xs-9">
          <%= @alarm.user.name %>
        </div>
      </div>
		</div>
	</div>
</div>
